# Configuration de sécurité
SECURITY_SECRET_KEY=your_secret_key_here  # Clé secrète pour JWT, au moins 32 caractères
SECURITY_CORS_ORIGINS=https://api.dazno.de  # Origines CORS autorisées

# Configuration MongoDB
MONGO_USER=mcp_admin  # Utilisateur MongoDB
MONGO_PASSWORD=change_this_password  # Mot de passe MongoDB

# Configuration Redis
REDIS_PASSWORD=change_this_password  # Mot de passe Redis

# Configuration OpenAI
OPENAI_API_KEY=your_openai_api_key  # Clé API OpenAI

# Configuration Grafana
GRAFANA_ADMIN_USER=admin  # Utilisateur admin Grafana
GRAFANA_ADMIN_PASSWORD=change_this_password  # Mot de passe admin Grafana

# Configuration SSL
SSL_EMAIL=admin@dazno.de  # Email pour Let's Encrypt
SSL_DOMAIN=api.dazno.de  # Domaine pour le certificat SSL

# Configuration des sauvegardes
BACKUP_RETENTION_DAYS=7  # Nombre de jours de rétention des sauvegardes
BACKUP_S3_BUCKET=mcp-backups  # Bucket S3 pour les sauvegardes (optionnel)
BACKUP_S3_ACCESS_KEY=your_access_key  # Clé d'accès S3 (optionnel)
BACKUP_S3_SECRET_KEY=your_secret_key  # Clé secrète S3 (optionnel)

# Configuration du monitoring
PROMETHEUS_RETENTION_TIME=15d  # Durée de rétention des métriques Prometheus
ALERT_TELEGRAM_BOT_TOKEN=your_bot_token  # Token du bot Telegram pour les alertes
ALERT_TELEGRAM_CHAT_ID=your_chat_id  # ID du chat Telegram pour les alertes 