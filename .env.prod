# Production Environment Configuration
# Copy this file and rename to .env, then fill in your actual values

# API Configuration
API_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-key-here
CORS_ORIGINS=["https://dazno.de","https://api.dazno.de"]

# Database Configuration (Hostinger MongoDB)
MONGO_URL=mongodb://root:YOUR_MONGO_PASSWORD@YOUR_MONGO_HOST:27017/?directConnection=true
MONGO_NAME=mcp

# Redis Configuration (Hostinger Redis)
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_SSL=true
REDIS_MAX_CONNECTIONS=20

# LNbits Configuration
LNBITS_URL=https://your-lnbits-url.com
LNBITS_ADMIN_KEY=your-lnbits-admin-key
LNBITS_INVOICE_KEY=your-lnbits-invoice-key

# AI Configuration
AI_OPENAI_API_KEY=your-openai-api-key
AI_OPENAI_MODEL=gpt-3.5-turbo
AI_OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Security
SECURITY_SECRET_KEY=your-security-secret-key
SECURITY_CORS_ORIGINS=["https://dazno.de"]
SECURITY_ALLOWED_HOSTS=["dazno.de","api.dazno.de"]

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Telegram Notifications (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO