# Token4Good Production Configuration

# API Configuration
T4G_API_HOST=0.0.0.0
T4G_API_PORT=8001
T4G_API_PREFIX=/api/v1/token4good
T4G_API_TITLE=Token4Good - Community Rewards System
T4G_API_VERSION=1.0.0

# Database
T4G_DATABASE_URL=mongodb://localhost:27017/token4good
T4G_REDIS_URL=redis://localhost:6379/1

# Token Configuration
T4G_WELCOME_BONUS_TOKENS=50
T4G_MIN_BALANCE_FOR_EXPERT=1500
T4G_MIN_BALANCE_FOR_MENTOR=500

# Rewards Configuration
T4G_QUALITY_BONUS_THRESHOLD=4.5
T4G_QUALITY_BONUS_MULTIPLIER=1.1
T4G_QUICK_RESPONSE_HOURS=2
T4G_CONSISTENT_HELPER_DAYS=7
T4G_CONSISTENT_HELPER_MIN_ACTIONS=3

# Marketplace
T4G_MARKETPLACE_ENABLED=true
T4G_SERVICE_CREATION_MIN_LEVEL=mentor
T4G_MAX_SERVICES_PER_USER=10

# Features
T4G_ACHIEVEMENTS_ENABLED=true
T4G_WEEKLY_BONUSES_ENABLED=true

# System Limits
T4G_MAX_TOKENS_PER_TRANSACTION=1000
T4G_MAX_DAILY_TOKENS_PER_USER=2000

# Logging
T4G_LOG_LEVEL=INFO
T4G_LOG_FILE=/var/log/token4good/t4g.log

# Security
T4G_CORS_ORIGINS=["https://api.dazno.de", "https://dazno.de", "https://docs.dazno.de"]
T4G_SECRET_KEY=${JWT_SECRET}

# Production Settings
T4G_ENVIRONMENT=production
T4G_DEBUG=false